// NOTE:! This is mainly for Arch and Arch Based Distros  depend: pacman-contrib
// Other Distro dont have notifications but can use to check for update for any other distro
"custom/updater": {
	"format": "ÔÄô {}",
	"exec": "(/usr/bin/yay -Qu --color never | sed 's/Get .*//') | sort -u -t' ' -k1,1 | wc -l",
	"exec-if": "[[ $((/usr/bin/yay -Qu --color never | sed 's/Get .*//') | sort -u -t' ' -k1,1 | wc -l) ]]",
	"interval": 43200, // (Arch Linux will try to check 12 hrs interval only
	"on-click": "kitty -e '/bin/sh -c \"yay ; echo Done - Press enter to exit; read\"'",
	"tooltip": true,
	"tooltip-format": "Left Click: Update System\nArch (w/ notification)",
